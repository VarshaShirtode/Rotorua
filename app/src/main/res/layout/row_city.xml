<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent" android:layout_height="@dimen/dimension200dp"
    android:layout_margin="@dimen/dimension10dp"
    android:elevation="@dimen/dimension10dp"

    >
<ImageView
    android:id="@+id/imgCity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/gradient_shape"
    android:scaleType="fitXY"
    android:background="@drawable/splash"
    ></ImageView>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimension26dp"
        android:text="Rotorua"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/dimension10dp"
        android:layout_marginLeft="@dimen/dimension20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimension40dp"
        android:elevation="@dimen/dimension10dp"
        ></TextView>
</FrameLayout>