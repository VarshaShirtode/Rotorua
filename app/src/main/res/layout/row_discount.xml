<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dimension20dp"
    android:background="@drawable/bg_gray_white_list"
    android:layout_margin="@dimen/dimension10dp"
    android:elevation="@dimen/dimension4dp"
    >
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="####"
        android:textSize="@dimen/dimension20dp"
        android:textColor="@color/colorBlack"
        android:padding="@dimen/dimension5dp"
        android:layout_weight="3"
        ></TextView>
    <TextView
        android:id="@+id/txtDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="####"
        android:textSize="@dimen/dimension20dp"
        android:textColor="@color/colorOrange"
        android:padding="@dimen/dimension5dp"
        android:layout_weight="1"
        ></TextView>
</LinearLayout>
</RelativeLayout>